# AgentOne AI Services Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Configuration Profile
# =============================================================================
# Determines which config/models.{profile}.yaml to load
# Options: "openrouter" (default), "azure", "openai", or custom profile name
CONFIG_PROFILE=openrouter

# =============================================================================
# OpenRouter Configuration (default provider)
# =============================================================================
OPENROUTER_API_KEY=sk-or-...
# OPENROUTER_SITE_URL=https://your-site.com
# OPENROUTER_APP_NAME=AgentOne

# =============================================================================
# OpenAI Configuration (for direct OpenAI access)
# =============================================================================
# OPENAI_API_KEY=sk-...

# =============================================================================
# Azure OpenAI Configuration
# =============================================================================
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
# AZURE_OPENAI_API_KEY=...
# AZURE_OPENAI_DEPLOYMENT=gpt-4o
# AZURE_OPENAI_API_VERSION=2024-08-01-preview

# =============================================================================
# GenAI Platform Configuration (Company Azure GenAI Gateway)
# =============================================================================
# Enable to route requests through company gateway
# GENAI_PLATFORM_ENABLED=true
# GENAI_PLATFORM_BASE_URL=https://genai.yourcompany.com
# GENAI_PLATFORM_PATH=stg/v1
# GENAI_PLATFORM_USER_ID=your-user-id
# GENAI_PLATFORM_PROJECT_NAME=your-project

# =============================================================================
# Vertex AI / Gemini Configuration
# =============================================================================
# For direct Vertex AI access (requires Google Cloud credentials)
# VERTEX_PROJECT_ID=your-gcp-project
# VERTEX_LOCATION=us-central1
# VERTEX_MODEL=gemini-2.5-flash-lite

# =============================================================================
# Application Settings
# =============================================================================
DEBUG=false
LOG_LEVEL=INFO

# =============================================================================
# Telemetry (Optional)
# =============================================================================
# ENABLE_TELEMETRY=true
# APPINSIGHTS_CONNECTION_STRING=InstrumentationKey=...
